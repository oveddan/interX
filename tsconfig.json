{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "baseUrl": "./",
    "types": ["mocha"]
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist"]
}
